<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>
    
    <header>
    <%- include('partials/header.ejs') %>
    </header>
    
    <main class="main-perfil">
        <section class="banner-perfil-artista">
            <img src="/img/obra-arte24.png" id="banner-artist">
            <div class="contenedor-img-artist">
                <img src="/img/avatars/<%=artist.img%>" id="img-artist" alt="avatar-artist">
            </div>
        </section>
       <section class="perfil-usuario-caja">

           
            <div class="contenedor-datos-artist">
                <p class="titulares-secundarios"><%=artist.nombre_completo%></p>
                <p class="titulares-terciarios titular-artista"><%=artist.titular%></p>
            </div>
            <div class="caja-datos-artist-peque">
                <p class="parrafos"> <i class="far fa-envelope"></i>  <%=artist.email%></p>
                <p class="parrafos"> <i>@</i>  <%=artist.nombre_usuario%></p>
                <p class="parrafos"> <i class="fas fa-map-marker-alt"></i>  <%=artist.domicilio%></p>
            </div>
            
            
            <h4 class="titulares-terciarios">Sobre <%=artist.nombre_completo%></h4>
            <p class="parrafos"><%=artist.biografia%></p>
            <h4 class="titulares-terciarios">Obras publicadas</h4>
        </section>

        <%- include('partials/caja-social') %>
            
    </main>  
    
    <footer>
        <%- include('partials/footer') %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>