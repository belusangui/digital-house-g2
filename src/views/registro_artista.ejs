<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>

    <header>
    <%- include('partials/header.ejs') %>
    </header>

    <main>
        <section class="contenedor-registro">
            <div class="registro-ppal">
                <h2 class="titulares-secundarios">Complet치 tus datos.</h2>
            
                    <form action="/artist/crear_artista" id="register-form" method="POST"  enctype="multipart/form-data">
                    <div class="form-section">
                        <input type="text" name="nombre" class="login-field <%= locals.errors && errors.nombre ? 'is-invalid' : null %>" placeholder="Nombre y Apellido" value="<%= locals.old && old.nombre ? old.nombre : '' %>">
                        <% if (locals.errors && errors.nombre) { %>
                            <p class="error-message"><%=errors.nombre.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <input type="text" name="username" class="login-field <%= locals.errors && errors.username ? 'is-invalid' : null %>" placeholder="Nombre de Usuario" value="<%= locals.old && old.username ? old.username : '' %>">
                        <% if (locals.errors && errors.username) { %>
                            <p class="error-message"><%=errors.username.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <input type="text" name="domicilio" class="login-field <%= locals.errors && errors.domicilio ? 'is-invalid' : null %>" placeholder="Domicilio" value="<%= locals.old && old.domicilio ? old.domicilio : '' %>">
                        <% if (locals.errors && errors.domicilio) { %>
                            <p class="error-message"><%=errors.domicilio.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <input type="email" name="email" class="login-field <%= locals.errors && errors.email ? 'is-invalid' : null %>" placeholder="Email" value="<%= locals.old && old.email ? old.email : '' %>">
                        <% if (locals.errors && errors.email) { %>
                            <p class="error-message"><%=errors.email.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <input type="password" name="password" class="login-field <%= locals.errors && errors.password ? 'is-invalid' : null %>" placeholder="Contrase침a">
                        <% if (locals.errors && errors.password) { %>
                            <p class="error-message"><%=errors.password.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <input type="password" name="password2" class="login-field <%= locals.errors && errors.password2 ? 'is-invalid' : null %>" placeholder="Confirmar contrase침a">
                        <% if (locals.errors && errors.password2) { %>
                            <p class="error-message"><%=errors.password2.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <input type="date" name="fecha_nacimiento" class="login-field <%= locals.errors && errors.fecha_nacimiento ? 'is-invalid' : null %>" placeholder="Confirmar contrase침a">
                        <% if (locals.errors && errors.fecha_nacimiento) { %>
                            <p class="error-message"><%=errors.fecha_nacimiento.msg%></p>
                        <% } %>
                    </div>
                    <div class="form-section">
                        <label for="avatar">Foto de perfil</label>
                        <input type="file" name="avatar" class="login-field" >
                    
                    </div>
                    
                    <div class="form-section">
                        <input type="submit" id="boton-crear-cuenta" value="Crear cuenta">
                    </div>
                </form>
            </div>
        </section>

        <%- include('partials/caja-social') %>
        
    </main>

    <footer>
        <%- include('partials/footer') %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>