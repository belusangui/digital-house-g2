<body>

    <header>
    <%- include('partials/header.ejs') %>
    </header>

    <main id="carrito-de-compras-main">
        <h1 id="titulo-carrito" class="titulares-principales">Carrito</h1>
        
        <div class="main-flex-compras">

            <section class="carrito-section1">
                <ul id="lista-productos-carrito">
                    <!-- <li class="productoCarrito">
                            <div class="contenedor-img-carrito">
                                <img class="imagen-carrito-producto" src="/img/obra-arte14.jpg">
                            </div>
                            <div class="detalles-producto-carrito">
                                <p class="nombreObra parrafos">Nombre de la obra</p>
                                <i class="fas fa-times" id="boton-cruz"></i>
                                <p class="nombreArtista parrafos">Artista</p>
                                <p class="precioObra parrafos">$3000</p>
                            </div>
                    </li> -->
                </ul>
                
               
                <form action="/pais" method="POST" id="form-direccion">
                        <label class="parrafos">Dirección de Envío</label>
                        <select id="country" name="pais">
                        <option value="1">Argentina</option>
                        <option value="2">Uruguay</option>
                        </select>
                </form>
            

            </section>

            <section class="carrito-section2">
                
                    <form action="/descuento" method="POST" id="descuentoForm" >
                        
                        <label id="pregunta-cupon">¿Tienes un cupón de descuento o Gift Card?</label> 
                        <input type="text" name="descuento" id="input-cupon">
                        <button type="submit" id="boton-descuento" class="parrafos">Agregar código</button>
                     
                    </form>
                    <div class="lineaDivisora"></div>
                    <ul class="summary-list">
                        <li class="subtotal"> 
                            <h5 class="titulares-terciarios">Subtotal:</h3>
                            <p class="valor-num" id="subtotal-carrito"></p>
                        </li>
                        <li class="shipping-cost">
                            <h5 class="titulares-terciarios">Costo de Envío:</h3>
                            <p class="valor-num" id="envio-carrito">$ 60</p>
                        </li>
                        <li class="total-compra">
                            <h5 class="titulares-terciarios">Total Compra:</h3>
                            <p class="valor-num" id="total-carrito"></p>
                        </li>

                    </ul>

                    <button id="botonFinalizarCompra" class="parrafos">Finalizar Compra</button>

                </div>
              
                

            </section>
            
        
            <a id="enlace-continuar-comprando" href="/galeria">
                <i class="fas fa-arrow-left flecha-icon"></i>
                <p class="parrafos">Continuar comprando</p>
            </a>
    
        </div>
        
        

       <%- include('partials/caja-social') %>

    </main>
    
    <footer>
    <%- include('partials/footer.ejs') %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
